{
  "python.linting.flake8Enabled": true,
  "python.jediEnabled": false,
  "python.linting.mypyEnabled": true,
  "coc.preferences.formatOnSaveFiletypes": ["css", "javascript", "typescript", "typescriptreact", "python"],
  "eslint.autoFixOnSave": true,
  "eslint.autoFix": true,
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "typescript.showUnused": false,
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    /* "prose": { */
    /*   "command": "prose-language-server", */
    /*   "args": ["--stdio"], */
    /*   "filetypes": ["markdown"] */
    /* }, */
    "ocaml": {
      "command": "~/code/ocaml-lsp/_build/install/default/bin/ocaml-lsp-server",
      "filetypes": ["ocaml"]
    }
  }
}
