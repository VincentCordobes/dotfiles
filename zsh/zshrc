}

draft() {
  (cd /home/vincent/Dropbox/wiki; vim "drafts/$(date +%Y-%m-%d)_${1-"en"}.md" -c "set spelllang=${1:-en_us}|set spell")
}

pad() {
  tmpfile=`mktemp /tmp/scratchpad.XXXXXX`
  dir=`dirname $tmpfile`
  pushd $dir
  vim $tmpfile -c "set ft=markdown"
  rm $tmpfile
  popd
}

