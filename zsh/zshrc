}

incworkout() {
  WORKOUT_FILE=~/Dropbox/wiki/workout.gpi
  now=$(date +%Y-%m-%d)
  last_line=$(tail -n 1 $WORKOUT_FILE)
  echo "last: $last_line"

  if [ -n "$1" ]; then
    line="$now $1"
  else
    line="$now"
  fi;

  echo "now: $line"

  if [ "$line" = "$last_line" ]; then
    echo "Already marked => ignore"
  else
    echo "$line" >> $WORKOUT_FILE
  fi
}

fe() (
  IFS=$'\n' files=($(fzf --height ${FZF_TMUX_HEIGHT:-10%} --query="$1" --multi --exit-0))
  [[ -n "$files" ]] && ${EDITOR:-vim} "${files[@]}"
)


sk() {
  (cd ~/Dropbox/wiki && fe $@)
}


ledgerdit() {
  vim "+ normal Gk" ~/Dropbox/wiki/ledger.dat
}

tophistory() {
  history | awk '{CMD[$2]++;count++;}END { for (a in CMD)print CMD[a] " " CMD[a]/count*100 "% " a;}' | grep -v "./" | column -c3 -s " " -t | sort -nr | nl |  head -n"${1:-10}"
}


howmuchVAT() {
  start=`date  -v1d -v-1m +%Y-%m-%d`
  end=`date  -v1d -v-1d +%Y-%m-%d`

  echo "Period: \e[33m$start..$end\e[39m\n"

  echo -e "Balance:"

  ledger bal \
    Liabilities:VAT Payable \
    Assets:VAT Deductible \
    -e $end

  echo ""
  echo "Details:"

  ledger reg \
    Assets:VAT Deductible \
    Liabilities:VAT Payable \
    Income:Freelance \
    -b $start -e $end

}

howmuchcotsoc() {
  start=`date  -v1d -v-3m +%Y-%m-%d`
  end=`date  -v1d -v-1d +%Y-%m-%d`

  echo "Period: \e[33m$start..$end\e[39m\n"

  echo -e "Balance:"

  ledger bal \
    Income:Freelance \
    -b $start -e $end

  echo ""
  echo "Details:"

  ledger reg \
    Income:Freelance \
    -b $start -e $end

}

jsontocsv() {
  inputfile=$1
  filename=$(basename "$inputfile")
  filename="${filename%.*}"
  outputfile=~/tmp/$filename.csv

  cat "$inputfile" \
    | jq -r '(map(keys) | add | unique) as $cols | map(. as $row | $cols | map($row[.])) as $rows | $cols, $rows[] | @csv' \
    > "$outputfile"
}


alias preview="watch -n 5 --color prep review"

# foncia
export RABBITMQ__IS_ACTIVATED=true

fwtoday() {
  watson report --day --project foncia --current
}

fwyesterday() {
  yesterday=`date -v-1d +%Y-%m-%d`
  watson report --from $yesterday --to $yesterday --project foncia --current
}


wyesterday() {
  project=$1
  from=$2
  to=$3
  yesterday=`date -v-1d +%Y-%m-%d`

  watson add $project \
    --from "$yesterday $from" \
    --to "$yesterday $to"
}



moop() {
  mpv $@ --start=${start:=0} --ab-loop-a=${start:=0} --ab-loop-b=${end:=0} --speed=${speed:=1}
}
